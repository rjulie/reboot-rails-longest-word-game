<h1 class="m-2">New game</h1>
<div class="d-flex">
  <% @letters.each do |letter| %>
    <div class="letters d-flex align-items-center justify-content-center p-2 m-2"><%= letter %></div>
  <% end %>
</div>

<p class="m-2">What is the longest word you can find?</p>
<div class="m-2">
  <form action="/score" method="post" data-turbo="false">
    <input type="text" name="word">
    <input type="submit" value="Play">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :letters, @letters %>
  </form>
</div>
